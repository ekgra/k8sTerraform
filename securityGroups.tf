resource "aws_security_group" "k8s-sec-grp" {
  provider    = aws.provider
  name        = "sg_lb"
  description = "Allow 443 for traffic to Jenkins"
  vpc_id      = aws_vpc.k8s-vpc.id
  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}